.chat-side
  .side-head
    .side-head__top
      %h3.side-head__user-name
        = current_user.name
      %ul.side-head__icon-list
        %li.side-head__icon
          = link_to new_group_path do
            = icon('fas', 'edit')
        %li.side-head__icon
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog')

  .side-group
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
            = group.show_last_message